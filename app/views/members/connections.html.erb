<div class="col-lg-10 mx-auto mt-5">
  <div class="row">
    <div class="col-lg-8">
      <p class="lead fw-bold">About <%= pluralize(@total_connections, "result") %></p>
      <% if @requested_connections.present? %>
      <% @requested_connections.each do |connection| %>
      <div class="card mb-2">
        <div class="row">
          <div class="col-lg-2">
            <%= image_tag "user.png", style: "width:90px; border-radius: 50%; margine: 5px;" %>
          </div>
          <div class="col-lg-10">
            <div class="card-body">
              <%= link_to member_path(connection.requested), style: "text-decoration:none;", target: "_blank" do %>
              <h4 style="margin-bottom: -2px;"><%= connection.requested.name %></h4>
              <% end %>
              <small class="text-muted"><%= connection.requested.profile_title %></small>
              <small class="text-muted"><%= connection.requested.address %></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>

      <% @received_connections.each do |connection| %>
      <div class="card mb-2">
        <div class="row">
          <div class="col-lg-2">
            <%= image_tag "user.png", style: "width:90px; border-radius: 50%; margine: 5px;" %>
          </div>
          <div class="col-lg-10">
            <div class="card-body">
              <%= link_to member_path(connection.received), style: "text-decoration:none;", target: "_blank" do %>
              <h4 style="margin-bottom: -2px;"><%= connection.received.name %></h4>
              <% end %>
              <small class="text-muted"><%= connection.received.profile_title %></small>
              <small class="text-muted"><%= connection.received.address %></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>