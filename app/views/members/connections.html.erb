<div class="col-lg-10 mx-auto mt-5">
  <div class="row">
    <div class="col-lg-8">
      <p class="lead fw-bold">About <%= pluralize(@total_connections, "result") %></p>
      <% if @connected_users.present? %>
      <% @connected_users.each do |user| %>
      <div class="card mb-2">
        <div class="row">
          <div class="col-lg-2">
            <%= image_tag "user.png", style: "width:90px; border-radius: 50%; margine: 5px;" %>
          </div>
          <div class="col-lg-10">
            <div class="card-body">
              <%= link_to member_path(user), style: "text-decoration:none;", target: "_blank" do %>
              <h4 style="margin-bottom: -2px;"><%= user.name %></h4>
              <% end %>

              <% mutul_connection_count = current_user.connected_user_ids.intersection(@user.connected_user_ids).count %>

              <% if mutul_connection_count > 0 %>
              <%= link_to member_connections_path(user, mutul_connection: true ), style: "text-decoration:none;", target: "_blank" do %>
              <small class="text-primary"><%= pluralize(mutul_connection_count, 'mutul connection') %></small><br>
              <% end %>
              <% end %>

              <small class="text-muted"><%= user.profile_title %></small>
              <small class="text-muted"><%= user.address %></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>