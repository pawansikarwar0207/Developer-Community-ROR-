<div class="col-lg-10 mx-auto mt-3">
  <div class="card">
    <div class="card-header">
      <% if params[:q].present? %>
      <h3 class="card-title text-center"><%= pluralize(@posts.count, "Result") %></h3>
      <% end %>
    </div>
    <div class="card-body text-center">
      <div class="row">
        <% @posts.each do |post| %>
        <div class="col-lg-3">
         <div class="card mt-3" style="min-height: 400px;">
          <div class="card-body">
            <%= image_tag "user1.avif", style: "width: 150px; ", class: 'mb-3 border border-3 rounded-circle' %>
            <p class="h5"><%= link_to post.title, post, style: "text-decoration: none; color: black;" %></p>
            <p class="text-muted"><%= post.description.truncate_words(13) %></p>
            <p><%= link_to post.user.name, member_path(post.user), style: "text-decoration: none;" %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>