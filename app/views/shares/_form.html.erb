<div class="col-lg-10 mx-auto mt-3">
  <%= form_with(model: Share.new, url: shares_path) do |form| %>
    <div class="form-group">
      <%= form.hidden_field :post_id, value: params[:post_id] %>
    </div>
    <div class="form-group">
      <%= form.label :recipient_id, "Recipient ID" %>
      <%= form.collection_select(:recipient_id, User.all, :id, :name, { prompt: 'Select Recipient' }, class: 'form-select mt-2') %>
    </div>
    <div class="form-group">
      <%= form.submit "Share", class: 'btn btn-success mt-2' %>
    </div>
    <% end %>
</div>