<div class="col-lg-8 mx-auto mt-5">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center card-title">Sign up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } } ) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <div class="col-lg-6">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control mt-2 mb-2" %>
        </div>
        <div class="col-lg-6">
         <%= f.label :last_name %><br />
         <%= f.text_field :last_name, class: "form-control mt-2 mb-2" %>
       </div>
     </div>

     <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: "form-control mt-2 mb-2" %>
    </div>

    <div class="form-group">
      <%= f.label :profile_title %><br />
      <%= f.text_field :profile_title, class: "form-control mt-2 mb-2" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2 mb-2" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2 mb-2" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2 mb-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary mt-2" %>
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary mt-2" %>
    </div>
    <% end %>
  </div>
</div>
</div>

