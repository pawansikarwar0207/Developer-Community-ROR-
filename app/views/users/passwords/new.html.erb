<section class="vh-100 col-lg-10 mx-auto">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
     <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 border-bottom">Forgot password?</p>
     <div class="col-md-9 col-lg-6 col-xl-5">
      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
      class="img-fluid" alt="Sample image">
    </div>
    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <!-- Email input -->
      <div class="form-outline mb-2">
        <%= f.label :email, class:"form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" , placeholder:"Enter a valid email address"%>
      </div>

      <div class="text-center text-lg-start mt-2 pt-2">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary", style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? 
          <%= link_to "Register", new_registration_path(resource_name),class:"link-danger" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>
</section>
