<li class="list-group-item" id="work_experience_item_<%= work_experience.id %>">
  <div class="row">
    <div class="col-lg-9">
      <div class="d-flex justify-content-start">
        <p class="fw-bold"><%= work_experience.job_title %></p>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="d-flex justify-content-end">
        <%= link_to edit_work_experience_path(work_experience), id: 'edit-work-experience-link', data: { controller: 'bs-modal-form' } do %>
        <i class="fa-solid fa-pencil me-2"></i>
        <% end %>
        <%= link_to work_experience_path(work_experience), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this?' } do %>
          <i class="fa-solid fa-trash text-danger me-2"></i>
        <% end %>
      </div>
    </div>
  </div>
  <small><%= work_experience.company_with_employment_type %></small><br>
  <small><%= work_experience.job_location %></small><br>
  <small><%= work_experience.job_duration %></small>
</li>