<div class="col-lg-10 mx-auto">
  <div class="row mt-4 mb-4">
    <% @posts.each do |post| %>
    <div class="col-lg-3 mt-3 mb-3">
      <div class="card text-center shadow" style="min-height: 320px;">
        <div class="card-body">
           <% if post.image.attached? %>
            <%= image_tag post.image, style: "width: 220px;", class: 'mb-3' %>
          <% end %>
          <div class="user-info" data-controller="user-name" >
            <h5 data-user-name-target='name' data-action="click->user-name#getUserName" ><%= post.title %> </h5>
            <p class="lead"><%= post.description %></p>
            <small class="text-primary"><%= post.user_id %></small><br>
            <%= link_to "View Post", posts_path(post), class:'btn btn-primary mt-2' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>