<div class="col-lg-10 mx-auto mt-3">
  <p style="color: green;"><%#= notice %></p>
  <div class="card shadow">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <% if @post.image.attached? %>
            <% if @post.image.content_type.include?("image") %>
              <%= image_tag @post.image, style: "width: 800px; height: 300px; max-width:100%; max-height: 100%;", class: 'image-container mb-3' %>
            <% else %>
             <div class="bg-dark text-center">
                <%= video_tag rails_blob_path(@post.image), controls: true, type: 'video/mp4', style: "max-width: 100%; height: 400px;" do %>
                  Your browser does not support the video tag.
                <% end %>
             </div>
            <% end %>
          <% end %>
        </div>
        <div class="col-lg-6">
          <small class="text-primary">User ID : <%= @post.user_id %></small>
          <p><strong>Post Uploaded by :</strong> <%= @user.name %></p>
          <p> <strong>Title : </strong><%= @post.title  %> </p>
          <p> <strong>Description : </strong><%= simple_format @post.description  %> </p>
        </div>
      </div>    

      <div class="container mt-3">
        <%= render partial: "comments/form", locals: { comment: Comment.new(commentable: @post), submit_label: "Create Comment" } %>
        
        <% @comments.each do |comment| %>
        <%= render 'comments/comment', comment: comment %>
        <% end %>
      </div>
    </div>
  </div> 

  <%= link_to 'Back', root_path, class: 'btn btn-warning mt-3 mb-3' %>
  <% if @post.user == current_user %>
  <%= link_to 'Edit Post', edit_post_path(@post),data: { controller: 'bs-modal-form' }, class: "btn btn-primary mt-3 mb-3" %>
  <% end %>
</div>