<div class="card shadow mb-3 fs-5" id="<%= dom_id(notification) %>">
  <div class="card-body">
    <%= render "notifications/#{notification.item_type.downcase}", notification: notification %>
    <div class="text-end mt-3">
      <%= link_to "Mark as Read", notification, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to mark this notification as read?" }, class: "btn btn-outline-danger btn-sm fw-bold" %>
    </div>
  </div>
</div>
